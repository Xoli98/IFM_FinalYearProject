@model IEnumerable<fast_claims_v1._2.Models.admin.AdminClaimApplicationModel>
@{
    ViewBag.Title = "ViewClaimApplications";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>View claim Applications</h2>
<div class="row">
    <div class="col-md-12 card">
        <table class="table table-list-search">
            <thead class="card-header">
                <tr>
                    <th>Claim Number #</th>
                    <th>Date Created</th>
                    <th>Status</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var mdl in Model)
                    {
                        <tr>
                            <td>@mdl.claimnumber</td>
                            <td>@mdl.datecreated</td>
                            <td>@mdl.status</td>
                            <td>@mdl.email</td>
                            <td>

                                @Html.ActionLink("View", "ViewApplication", new {claimnumber = mdl.claimnumber }, new { @class = "btn btn-outline-success" })

                                @Html.ActionLink("Delete", "#", null, new { @class = "btn btn-outline-danger" })
                                <!--
                                    <a href="#" class="btn btn-outline-danger">
                                    <span class="glyphicon glyphicon-pencil">
                                    </span>Delete
                                </a>
                                    -->

                            </td>
                        </tr>
                    }
                }
                else
                {

                    <tr>
                        <td>There is no claim applications yet.</td>
                        <td>There is no claim applications yet.</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>



